<!-- cat > $HIVE_HOME/conf/hive-site.xml <<'XML' -->
<?xml version="1.0"?>
<configuration>

  <!-- Point HS2 to the standalone metastore (thrift) -->
  <property>
    <name>hive.metastore.uris</name>
    <value>thrift://localhost:9083</value>
  </property>

  <!-- HDFS warehouse location -->
  <property>
    <name>hive.metastore.warehouse.dir</name>
    <value>/user/hive/warehouse</value>
  </property>

  <!-- Bind HS2 explicitly & set port -->
  <property>
    <name>hive.server2.thrift.bind.host</name>
    <value>0.0.0.0</value>
  </property>
  <property>
    <name>hive.server2.thrift.port</name>
    <value>10000</value>
  </property>

  <!-- Helpful during setup -->
  <property>
    <name>hive.metastore.schema.verification</name>
    <value>false</value>
  </property>

</configuration>
XML
